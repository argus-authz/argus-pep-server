<!-- 
Binary distribution with dependency jar files.
Installed in a fakeroot directory structure.
-->
<assembly>
    <id>fakeroot</id>
    <formats>
        <format>dir</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <!-- /var/lib/argus/pepd library and endorsed directories -->
    <dependencySets>
        <dependencySet>
            <scope>compile</scope>
            <outputDirectory>/var/lib/argus/pepd/lib</outputDirectory>
            <excludes>
                <exclude>net.jcip:*</exclude>
                <!-- use jars from /usr/share/java directory -->
                <exclude>org.glite.authz:pep-common</exclude>
                <exclude>org.glite.authz:pdp-pep-common</exclude>
                <exclude>eu.eu-emi.security:canl:*</exclude>
                <exclude>org.italiangrid:voms-api-java:*</exclude>
                <exclude>org.bouncycastle:*</exclude>
            </excludes>
            <fileMode>0644</fileMode>
        </dependencySet>
        <!-- copy of the OS provided jars -->
        <dependencySet>
            <scope>compile</scope>
            <outputDirectory>/var/lib/argus/pepd/lib/provided</outputDirectory>
            <includes>
                <include>eu.eu-emi.security:canl:*</include>
                <include>org.italiangrid:voms-api-java:*</include>
                <include>org.bouncycastle:*</include>
            </includes>
            <fileMode>0644</fileMode>
        </dependencySet>        
        <dependencySet>
            <scope>runtime</scope>
            <outputDirectory>/var/lib/argus/pepd/lib/endorsed</outputDirectory>
            <includes>
                <include>xerces:*</include>
                <include>xml-apis:*</include>
                <include>xml-resolver:*</include>
                <include>xalan:*</include>
            </includes>
            <fileMode>0644</fileMode>
        </dependencySet>
    </dependencySets>
    
    <fileSets>
        <!-- /usr/share/argus/pepd home directory -->
        <fileSet>
            <directory>src/main/build</directory>
            <excludes><exclude>*</exclude></excludes>
            <outputDirectory>/usr/share/argus/pepd</outputDirectory>
        </fileSet>
        <!-- /usr/share/argus/pepd/sbin/pepdctl control script -->
        <fileSet>
            <directory>src/main/scripts/sbin</directory>
            <outputDirectory>/usr/share/argus/pepd/sbin</outputDirectory>
            <fileMode>0755</fileMode>
        </fileSet>
        <!-- /etc/argus/pepd config directory -->
        <fileSet>
            <directory>src/main/config</directory>
            <outputDirectory>/etc/argus/pepd</outputDirectory>
            <fileMode>0644</fileMode>
            <directoryMode>0755</directoryMode>
        </fileSet>
        <!-- /usr/sbin for linking pepdctl -->
        <fileSet>
            <directory>src/main/build</directory>
            <excludes><exclude>*</exclude></excludes>
            <outputDirectory>/usr/sbin</outputDirectory>
        </fileSet>
        <!-- /etc/sysconfig/argus-pepd optional config -->
        <fileSet>
            <directory>src/main/scripts/sysconfig</directory>
            <outputDirectory>/etc/sysconfig</outputDirectory>
            <fileMode>0644</fileMode>
        </fileSet>
        <!-- /etc/init.d startup script -->
        <fileSet>
            <directory>src/main/scripts/init.d</directory>
            <outputDirectory>/etc/init.d</outputDirectory>
            <fileMode>0755</fileMode>
        </fileSet>
        <!-- /var/log/argus/pepd logging directory -->
        <fileSet>
            <directory>src/main/build</directory>
            <excludes><exclude>*</exclude></excludes>
            <outputDirectory>/var/log/argus/pepd</outputDirectory>
            <directoryMode>0750</directoryMode>
        </fileSet>        
        <!-- Documentation -->
        <fileSet>
            <directory>doc</directory>
            <outputDirectory>/usr/share/doc/argus/pepd</outputDirectory>
            <fileMode>0644</fileMode>
        </fileSet>
        <!-- Systemd -->
        <fileSet>
        	<directory>src/main/scripts/systemd/system</directory>
			<outputDirectory>/lib/systemd/system</outputDirectory>
			<fileMode>0644</fileMode>
        </fileSet>
    </fileSets>
    
</assembly>
